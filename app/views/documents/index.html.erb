<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Modified by</th>
      <th>Last modified</th>
      <th>Status</th>
      <th>Country</th>
      <th>Stared</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.title %></td>
        <td><%= document.modified_by %></td>
        <td><%= document.last_modified %></td>
        <td><%= document.status %></td>
        <td><%= document.country %></td>
        <td><%= document.stared %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

